# Core ingestion schedule
EVENT_SCHEDULER_ENABLED=1
EVENT_REFRESH_MINUTES=10
EVENT_CONNECTOR_DELAY_SECONDS=0.35
EVENT_DEFAULT_SINCE_HOURS=48

# Optional keyed connectors (leave blank if unused)
ENABLE_OPTIONAL_CONNECTORS=0
ACLED_API_KEY=
ACLED_EMAIL=
ALPHA_VANTAGE_API_KEY=

# GDELT connector tuning
GDELT_QUERY=theme:ECONOMY OR theme:ENV_DISASTER OR theme:POLITICAL
GDELT_MAX_RECORDS=100

# News ingestion tuning
NEWS_SCHEDULER_ENABLED=1
NEWS_REFRESH_MINUTES=10
NEWS_FORCE_REFRESH_COOLDOWN_SECONDS=45
NEWS_FETCH_TIMEOUT_SECONDS=10
NEWS_FETCH_DELAY_SECONDS=0.35
NEWS_MAX_ITEMS_PER_SOURCE=35
NEWS_MAX_ITEMS=120

# Video ingestion tuning
VIDEO_CACHE_SECONDS=600
VIDEO_FETCH_TIMEOUT_SECONDS=10
VIDEO_FETCH_DELAY_SECONDS=0.2
VIDEO_MAX_ITEMS_PER_SOURCE=10
VIDEO_MAX_ITEMS=80
YOUTUBE_API_KEY=
